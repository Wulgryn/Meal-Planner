             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Meal_Planner.Meal_Manager"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="1900" Background="#FFA7A7A7">
