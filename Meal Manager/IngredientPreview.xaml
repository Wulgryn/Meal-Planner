        <Label x:Name="protein_value" Content="100,00" Margin="888,10,-276,10" FontSize="30" FontFamily="Comic Sans MS" HorizontalContentAlignment="Center" d:LayoutOverrides="Height" Width="168" VerticalContentAlignment="Center" HorizontalAlignment="Left"/>
        <Label x:Name="fat_value" Margin="1056,10,0,10" FontSize="30" FontFamily="Comic Sans MS" HorizontalContentAlignment="Center" Width="144" d:LayoutOverrides="Height" HorizontalAlignment="Left" VerticalContentAlignment="Center" Content="100,00"/>
        <Label x:Name="carbohydrate_value" Content="100,00" Margin="1200,9,0,10" FontSize="30" FontFamily="Comic Sans MS" HorizontalContentAlignment="Center" Width="204" HorizontalAlignment="Left" d:LayoutOverrides="Height" VerticalContentAlignment="Center"/>
        <Label x:Name="portion_type" Content="100g" Margin="0,80,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS" Height="40" Padding="0,0,0,0" HorizontalAlignment="Left" Width="696" VerticalContentAlignment="Bottom" FontSize="20"/>
        <Label x:Name="past_action_value" Content="100,00" Margin="1404,9,0,10" FontSize="30" FontFamily="Comic Sans MS" HorizontalContentAlignment="Center" Width="468" HorizontalAlignment="Left" d:LayoutOverrides="Height" VerticalContentAlignment="Center"/>
        

    </Grid>
</UserControl>
